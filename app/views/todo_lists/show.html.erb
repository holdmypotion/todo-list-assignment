<p style="color: green" id="notice"><%= notice %></p>

<div class="back">
  <%= link_to todo_lists_path do %>
  <i class="fa fa-arrow-left"></i>
  <% end %>
  <%= button_to @todo_list, method: :delete, :style => "display: inline;" do %>
  <i class="fa fa-trash"></i>
      <% end %>
</div>

<h2 class="todo_list_title"><%= @todo_list.title %></h2>
<p class="todo_list_sub_title"><%= @todo_list.description %></p>

<div class="links">
  <%= link_to 'Edit Todo List', edit_todo_list_path(@todo_list) %> 
</div>

<div id="todo_items_wrapper">
  <%= render @todo_list.todo_items %>
  <div id="form">
    <%= render "todo_items/form" %>
  </div>
</div>



